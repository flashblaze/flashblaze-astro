---
export interface Props {
  date: string;
  href: string;
}

let { date, href } = Astro.props;
date = new Date(date);
const parsedDate = date.toUTCString().slice(0, 16);
---

<div class='mb-7'>
  <a
    {href}
    class='font-medium transition ease-in-out dark:hover:text-neutral-500 hover:text-neutral-500'
  >
    <slot />
  </a>
  <p class='text-sm text-gray-500 mt-1'>{parsedDate}</p>
</div>
