---
export interface Props {
  href: string;
  customClass?: string;
  newTab?: boolean;
}

const { href, customClass, newTab } = Astro.props;
---

<a
  {href}
  class:list={[
    'font-semibold',
    'text-gray-700 hover:text-neutral-500',
    'dark:text-gray-400 dark:hover:text-neutral-500',
    customClass,
  ]}
  target={newTab ? '_blank' : '_self'}
>
  <slot />
</a>
